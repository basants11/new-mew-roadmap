# =============================================================================
# Production Environment Configuration
# =============================================================================
# Optimized settings for production deployment with security hardening,
# performance optimization, and minimal logging.

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (Docker Compose)
DATABASE_URL=postgresql://user:password@db:5432/it_roadmap_db

# JWT Authentication (MUST BE CHANGED!)
JWT_SECRET=REPLACE_WITH_SECURE_SECRET_KEY
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# OAuth2 Configuration (Required for production)
OAUTH2_GOOGLE_CLIENT_ID=your-production-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=your-production-google-client-secret
OAUTH2_GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Rate Limiting (Stricter for production)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# AI Services Configuration (Optional for production)
OPENAI_API_KEY=your-production-openai-api-key
STABILITY_AI_API_KEY=your-production-stability-ai-api-key
AI_MODEL=gpt-4
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1500

# Observability & Monitoring
OTEL_SERVICE_NAME=it-roadmap-app-prod
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_METRICS_PORT=9090

# Logging (Minimal for production)
LOG_LEVEL=warn

# Database Seeding (Disabled for production)
SEED_DATABASE=false
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Security (Hardened for production)
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
HELMET_CONTENT_SECURITY_POLICY=true

# Redis Configuration (Recommended for production)
REDIS_URL=redis://redis:6379
REDIS_TTL=7200

# Email Configuration (Required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password