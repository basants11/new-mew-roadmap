# =============================================================================
# Testing Environment Configuration
# =============================================================================
# Optimized settings for testing with in-memory database, mock services,
# and fast execution.

# Application Settings
NODE_ENV=test
PORT=3001
HOST=0.0.0.0

# Database Configuration (In-memory for tests)
DATABASE_URL=postgresql://test:test@localhost:5432/it_roadmap_test_db

# JWT Authentication (Test-specific)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=1h

# OAuth2 Configuration (Mock for tests)
OAUTH2_GOOGLE_CLIENT_ID=test-google-client-id
OAUTH2_GOOGLE_CLIENT_SECRET=test-google-client-secret
OAUTH2_GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Rate Limiting (Disabled for tests)
RATE_LIMIT_MAX=10000
RATE_LIMIT_WINDOW_MS=60000

# AI Services Configuration (Mock for tests)
OPENAI_API_KEY=test-openai-api-key
STABILITY_AI_API_KEY=test-stability-ai-api-key
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=500

# Observability & Monitoring (Disabled for tests)
OTEL_SERVICE_NAME=it-roadmap-app-test
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_METRICS_PORT=9091

# Logging (Minimal for tests)
LOG_LEVEL=error

# Database Seeding (Enabled for tests)
SEED_DATABASE=true
SEED_ADMIN_EMAIL=test-admin@roadmap.test
SEED_ADMIN_PASSWORD=test123

# File Upload Configuration (Test-specific)
MAX_FILE_SIZE=1048576
UPLOAD_DIR=test-uploads

# Security (Relaxed for tests)
BCRYPT_SALT_ROUNDS=8
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
HELMET_CONTENT_SECURITY_POLICY=false

# Redis Configuration (Optional for tests)
REDIS_URL=redis://localhost:6380
REDIS_TTL=60

# Email Configuration (Mock for tests)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@example.com
SMTP_PASS=test-password