# =============================================================================
# Development Environment Configuration
# =============================================================================
# Optimized settings for local development with detailed logging and
# relaxed security for easier debugging.

# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/it_roadmap_db

# JWT Authentication
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth2 Configuration (Optional - leave empty for development)
OAUTH2_GOOGLE_CLIENT_ID=
OAUTH2_GOOGLE_CLIENT_SECRET=
OAUTH2_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Rate Limiting (Relaxed for development)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# AI Services Configuration (Optional for development)
OPENAI_API_KEY=
STABILITY_AI_API_KEY=
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Observability & Monitoring
OTEL_SERVICE_NAME=it-roadmap-app-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
PROMETHEUS_METRICS_PORT=9090

# Logging (Detailed for development)
LOG_LEVEL=debug

# Database Seeding (Enabled for development)
SEED_DATABASE=true
SEED_ADMIN_EMAIL=admin@roadmap.local
SEED_ADMIN_PASSWORD=admin123

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Security (Relaxed for development)
BCRYPT_SALT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
HELMET_CONTENT_SECURITY_POLICY=false

# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Email Configuration (Optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=